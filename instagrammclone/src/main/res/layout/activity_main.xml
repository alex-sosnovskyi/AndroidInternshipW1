<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ua.i.pl.sosnovskyi.instagrammclone.MainActivity">

    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
    <!--android:text="Hello World!" app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/ic_camera_alt_black_24dp"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/instagram"/>
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentRight="true"
    android:background="@mipmap/ic_send_black_24dp"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img1"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"/>
            <TextView
                android:layout_below="@+id/img1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:text="You story"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"/>
            <TextView
                android:layout_below="@+id/img2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="ninanic"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img3"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round"/>
            <TextView
                android:layout_below="@+id/img3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:text="justinaguilar"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img4"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/round"
                android:layout_gravity="center_vertical"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@+id/img4"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="ashoke"/>

        </RelativeLayout>
    </LinearLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=""
    android:textSize="5dp"
    android:background="@drawable/horizontal_line"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingLeft="20dp">
            <ImageView
                android:id="@+id/userImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round"/>
            <TextView
                android:layout_toRightOf="@+id/userImg"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userName"
                android:textColor="@color/colorBlack"/>
            <ImageView
                android:id="@+id/menuDot1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu"/>
            <ImageView
                android:layout_below="@+id/menuDot1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu"/>
            <ImageView
                android:layout_below="@+id/menuDot1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/photo"/>
    </LinearLayout>
</LinearLayout>
